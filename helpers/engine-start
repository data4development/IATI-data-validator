#!/bin/bash
echo -e "\nRunning in developer mode: using the engine source code at $MY_PATH\n"

if [ "$WORKSPACE." = "$MY_PATH." ]; then
  WORKSPACE=${MY_PATH}/develop/testspace
  echo -e "Using ./develop/testspace as /workspace\n"
fi

OTHER_VOLUMES="-v ${MY_PATH}:/home -v ${MY_PATH}/develop:/develop"

if [ "$1." = "root." ]; then
  USER="0:0"
  PARAMETERS=${@:2}
  ENTRY="--entrypoint=/bin/bash -it"
elif [ "$1." = "bash." ]; then
  PARAMETERS=${@:2}
  ENTRY="--entrypoint=/bin/bash -it"
fi
